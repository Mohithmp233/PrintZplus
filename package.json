{
  "name": "printzplus-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "PrintZplus - A blockchain-based printing service platform",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:frontend && npm run install:backend",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "cd frontend && npm run preview",
    "start:backend": "cd backend && npm start",
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && npm run lint",
    "clean": "node scripts/cleanup.js",
    "clean:dry": "node scripts/cleanup.js --dry-run",
    "clean:frontend": "cd frontend && rm -rf node_modules dist",
    "clean:backend": "cd backend && rm -rf node_modules dist",
    "clean:all": "npm run clean && npm run clean:frontend && npm run clean:backend",
    "clean:cache": "npm cache clean --force",
    "clean:deep": "npm run clean:all && npm run clean:cache"
  },
  "devDependencies": {
    "concurrently": "^8.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "blockchain",
    "printing",
    "3d-printing",
    "ethereum",
    "react",
    "typescript",
    "nodejs"
  ],
  "author": "PrintZplus Team",
  "license": "MIT"
}
